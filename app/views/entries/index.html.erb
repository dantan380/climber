<p id="notice"><%= notice %></p>

<% content_for :title do %>
  <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
    <% @entries.each do |entry| %>
      <div class="column is-one-quarter">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title"><%= entry.created_at.to_s(:nice_date) %></p>
          </header>
          <div class="card-content">
            <div class="content">
              <p>Color: <span class="has-text-weight-bold"><%= entry.color %></span></p>
              <p>Difficulty: <span class="has-text-weight-bold"><%= entry.difficulty %></span></p>
              <p>Attempts: <span class="has-text-weight-bold"><%= entry.attempts %></span></p>
              <p>Notes: <span class="has-text-weight-bold"><%= entry.notes %></span></p>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to 'Show', entry, class: "card-footer-item" %>
            <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
            <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
          </div>
        </div>
      </div>
    <% end %>
</div>  
