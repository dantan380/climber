<p id="notice"><%= notice %></p>

<% content_for :title do %>
  <%= @entry.created_at.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.created_at.to_s(:nice_date) %>
      </p>

      <div class="panel-block">
        <strong>Color:</strong> <%= @entry.color %>
      </div>


      <div class="panel-block">
        <strong>Difficulty:</strong> <%= @entry.difficulty %>
      </div>

      <div class="panel-block">
        <strong>Attempts:</strong> <%= @entry.attempts %>
      </div>

      <div class="panel-block">
        <strong>Notes:</strong> <%= @entry.notes %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-gray" %> 
        <%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
    </div>
  </div>
</div>